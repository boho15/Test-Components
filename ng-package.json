{
  "$schema": "node_modules/ng-packagr/ng-package.schema.json",
  "dest": "dist/ec-component-library",
  "lib": {
    "entryFile": "projects/ec-component-library/src/public-api.ts",
    "styleIncludePaths": ["projects/ec-component-library/src/lib/styles"]
  },
  "assets": [
    {
      "input": "projects/ec-component-library/src/lib/assets",
      "glob": "**/*",
      "output": "lib/assets"
    },
    {
      "input": "projects/ec-component-library/src/lib/styles",
      "glob": "**/*",
      "output": "lib/styles"
    }
  ]
}
